 #!/usr/bin/env bash

setup_builddir() {
	mkdir -p target 
	mkdir -p target/tests
}

build_libktk() {
	gcc -c lib/libktk/ktk.c -lX11 -lxcb -I/usr/include -Iinclude -o target/libktk.a
}
build_ktk_test() {
	gcc lib/libktk/tests/sample.c -Ltarget -lktk -lX11 -lxcb -I/usr/include -Iinclude -o target/tests/ktk_sample.out
}

setup_builddir
build_libktk
build_ktk_test
